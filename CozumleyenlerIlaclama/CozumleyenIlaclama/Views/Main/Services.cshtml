
@{
    ViewBag.Title = "Services";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}

<div class="col-xs-20 modal fade" id="mdl-hi" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true" data-backdrop="false">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
                <h4 class="modal-title" style="text-align:center">Hizmet İşlemleri</h4>
            </div>
            <div class="modal-body">
                <div class="row">
                    <div class="col-xs-2">Hizmet Grupları</div>
                    <div class="col-xs-6 bosluk" id="h-e-1"></div>
                </div>
                <div class="row">
                    <div class="col-xs-2">Hizmetler</div>
                    <div class="col-xs-6 bosluk" id="h-e-2"></div>
                    <button class="btn btn-primary a bosluk" id="hizmetsil">SİL</button>
                    <button class="btn btn-danger a bosluk" id="hizmetguncelle">GÜNCELLE</button>
                </div>
                <div class="row" id="hizmetguncellediv" style="display:none">
                    <div class="col-xs-2">Hizmet  Güncelle</div>
                    <div class="col-xs-6 bosluk" id="h-e-3"></div>
                    <button class="btn btn-warning a bosluk" id="hizmetkaydet">KAYDET</button>
                </div>
                <div class="row">
                    <div class="col-xs-2">Yeni Hizmet</div>
                    <div class="col-xs-6 bosluk" id="h-e-4"></div>
                    <button class="btn btn-primary a bosluk" id="hizmetekle">YENİ EKLE</button>
                </div>
            </div>
            <div class="modal-footer">
                @*<button class="btn btn-danger" id="y-iptal" data-dismiss="modal">İptal</button>
                <button class="btn btn-primary" id="y-kaydet">Kaydet</button>*@
            </div>
        </div><!-- /.modal-content -->
    </div><!-- /.modal-dialog -->
</div><!-- /.modal -->
